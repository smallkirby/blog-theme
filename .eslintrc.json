{
  "plugins": ["html", "prettier"],
  "extends": ["google"],
  "env": {
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "no-tabs": "off",
    "require-jsdoc": "off",
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "comma-dangle": ["error", "always-multiline"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "spaced-comment": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "no-undef": "off",
    "new-cap": "off",
    "space-before-function-paren": "off"
  }
}
